#!/bin/bash

# Quick Deploy Script Template for PakProperty App
# This script combines server setup and deployment in one command
#
# IMPORTANT: Before using this script:
# 1. Copy this file to quick-deploy.sh
# 2. Update the server configuration in setup-server.sh and deploy.sh
# 3. This template file is safe to commit to version control

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

print_header() {
    echo -e "${BLUE}================================${NC}"
    echo -e "${BLUE}  PakProperty App Deployment${NC}"
    echo -e "${BLUE}================================${NC}"
}

print_header

print_status "Starting complete deployment process..."

# Check if sshpass is installed
if ! command -v sshpass &> /dev/null; then
    print_error "sshpass is not installed. Please install it first:"
    echo "  Ubuntu/Debian: sudo apt-get install sshpass"
    echo "  macOS: brew install hudochenkov/sshpass/sshpass"
    exit 1
fi

print_status "sshpass is installed. Proceeding..."

# Check if deployment scripts exist
if [ ! -f "setup-server.sh" ]; then
    print_error "setup-server.sh not found. Please copy setup-server.sh.template to setup-server.sh and configure it."
    exit 1
fi

if [ ! -f "deploy.sh" ]; then
    print_error "deploy.sh not found. Please copy deploy.sh.template to deploy.sh and configure it."
    exit 1
fi

print_status "Deployment scripts found. Proceeding..."

# Step 1: Server Setup
print_status "Step 1: Setting up server environment..."
if ./setup-server.sh; then
    print_status "Server setup completed successfully!"
else
    print_error "Server setup failed!"
    exit 1
fi

# Step 2: Deploy Application
print_status "Step 2: Deploying application..."
if ./deploy.sh; then
    print_status "Application deployment completed successfully!"
else
    print_error "Application deployment failed!"
    exit 1
fi

print_header
print_status "🎉 Deployment completed successfully!"
print_status ""
print_status "Your application is now available at:"
print_status "  🌐 https://YOUR_SUBDOMAIN.YOUR_DOMAIN"
print_status "  📊 API: https://YOUR_SUBDOMAIN.YOUR_DOMAIN/api"
print_status "  🗄️  Admin: https://YOUR_SUBDOMAIN.YOUR_DOMAIN/mongo-express"
print_status ""
print_status "Default admin credentials:"
print_status "  Username: admin"
print_status "  Password: password123"
print_status ""
print_status "The application includes:"
print_status "  ✅ Automatic health checks (every 5 minutes)"
print_status "  ✅ Daily backups (at 2 AM)"
print_status "  ✅ SSL certificates"
print_status "  ✅ Firewall protection"
print_status ""
print_status "For monitoring and maintenance, see DEPLOYMENT_TEMPLATE.md"
print_header 